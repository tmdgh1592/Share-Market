<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/give_bill_btn_color"/>
            <corners android:radius="4dp"/>
            <stroke android:width="0.2dp" android:color="@color/gray_20"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/give_bill_btn_pressed_color"/>
            <corners android:radius="4dp"/>
            <stroke android:width="0.2dp" android:color="@color/gray_20"/>
        </shape>
    </item>
</selector>