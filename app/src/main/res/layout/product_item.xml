<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.app.buna.sharingmarket.model.items.ProductItem" />
        />
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/frame_view"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginBottom="0.5dp"
            android:orientation="horizontal"
            app:cardCornerRadius="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp">

                <!--imageview를 round하게 만들기 위한 cardview-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBackgroundView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.elyeproj.loaderviewlibrary.LoaderImageView
                        android:id="@+id/product_image_view"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/radius12_shape"
                        android:scaleType="fitXY"
                        android:src="@drawable/default_item" />
                </androidx.cardview.widget.CardView>

                <!--제품 정보-->
                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:id="@+id/item_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:maxLength="14"
                    android:maxLines="1"
                    android:text="@{model.title}"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/cardBackgroundView"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 나눔 타입 -->
                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:id="@+id/product_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/radius16_shape"
                    android:backgroundTint="@color/material_pink50"
                    android:paddingLeft="10dp"
                    android:paddingTop="4dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/photo_image_view"
                    app:layout_constraintStart_toEndOf="@+id/cardBackgroundView" />

                <!-- 제품 카테고리 -->
                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@{model.category}"
                    android:textColor="@color/gray_70"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/product_type" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toRightOf="@+id/cardBackgroundView"
                    app:layout_constraintTop_toBottomOf="@+id/item_title_text">

                    <!--gps icon-->
                    <ImageView
                        android:id="@+id/location_icon"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/location_icon"
                        app:tint="@color/gray_20" />

                    <!--동네 및 등록 시간-->
                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:id="@+id/location_and_time_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@{model.getLocationAndTime()}"
                        android:textColor="@color/gray_70"
                        android:textSize="14sp" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/heart_btn"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="5dp"
                    android:clickable="true"
                    android:heart_visible="@{model.likeCount}"
                    android:src="@drawable/like_heart"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/like_count"
                    app:tint="@color/heart_color" />

                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:heart_count="@{model.likeCount}"
                    android:textColor="@color/gray_70"
                    android:textSize="13sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/complete_view"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginBottom="0.5dp"
            android:orientation="horizontal"
            app:cardCornerRadius="4dp"
            android:alpha="0.45"
            android:background="@color/black" />
    </RelativeLayout>
</layout>